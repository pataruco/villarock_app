<%= form_for @meal do |form| %>
  
  <%= form.label :date %>
  <%= form.date_field :date %>
  <%= form.label(:category, 'Breakfast') %>
  <%= form.radio_button(:category, 0) %>
  <%= form.label(:category, 'Lunch') %>
  <%= form.radio_button(:category, 1) %>
  <%= form.label(:category, 'Dinner') %>
  <%= form.radio_button(:category, 2) %>
  <% @recipes.each do |recipe| %>
    <%= recipe.name %>
  <% end %>





  



  <%= form.submit 'Submit' %>

<% end %>

